generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Session {
  id              String           @id @default(uuid())
  studentName     String
  mode            String
  createdAt       DateTime         @default(now())
  numberSequences NumberSequence[]
  series          NumberSeries[]
}

model NumberSequence {
  id              String          @id @default(uuid())
  sessionId       String
  session         Session         @relation(fields: [sessionId], references: [id])
  inputValues     String          @db.NVarChar(Max) // JSON string of input numbers (can be large)
  isDeterministic Boolean
  confidenceScore Float
  createdAt       DateTime        @default(now())
  predictionLogs  PredictionLog[]
}

model PredictionLog {
  id               String         @id @default(uuid())
  sequenceId       String
  sequence         NumberSequence @relation(fields: [sequenceId], references: [id])
  predictedValues  String         // JSON string of predicted values
  actualNextValues String?        // JSON string, nullable
  accuracy         Float?
}

model NumberSeries {
  id        String   @id @default(uuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  numbers   String   // JSON array of numbers
  source    String   // "HTML", "OCR", "MANUAL"
  count     Int
  createdAt DateTime @default(now())
  
  @@index([sessionId])
}
